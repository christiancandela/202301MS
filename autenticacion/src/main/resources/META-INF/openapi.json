{
  "openapi": "3.0.3",
  "info": {
    "title": "Autenticaci√≥n",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/",
      "description": "Servidor de desarrollo."
    }
  ],
  "paths": {
    "/api/tokens": {
      "post": {
        "requestBody": {
          "description": "Se envian las credenciales de acceso",
          "content": {
           "application/json": {
             "schema": {
               "$ref": "#/components/schemas/Credential"
             }
           } 
          }
        },
        "responses": {
          "201": {
            "headers": {
              "Authorization": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            },
            "description": "Respues exitosa"
          }
        }
      }
    }
  },
  
  "components": {
    "schemas": {
      "Credential": {
        "type": "object",
        "properties": {
          "usuario": {
            "type": "string"
          },
          "clave": {
            "type": "string"
          }
        },
        "required": ["usuario","clave"],
        "example": {
          "usuario": "pedro",
          "clave": "pedro"
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "vigencia": {
            "type": "object"
          },
          "usuario": {
            "type": "string"
          }
        },
        "required": ["usuario","token","vigencia"]
      }
    }
  }
}